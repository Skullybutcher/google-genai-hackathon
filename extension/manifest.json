  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://truth-guard-ai-309053470356.asia-south1.run.app/*",
    "https://truthguardai-gateway-3xz6gfx0.an.gateway.dev/*"
