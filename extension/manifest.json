{
  "manifest_version": 3,
  "name": "TruthGuard AI",
  "version": "1.1",
  "description": "An AI-powered context engine to analyze news credibility.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus" 
  ],
  "host_permissions": [
    "https://truth-guard-ai-309053470356.asia-south1.run.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}