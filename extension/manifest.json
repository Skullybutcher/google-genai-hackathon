{
  "manifest_version": 3,
  "name": "TruthGuard AI",
  "version": "1.0",
  "description": "An AI-powered context engine to analyze news credibility.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}